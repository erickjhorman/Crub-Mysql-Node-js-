

<div class="container">
   <div class="row mt-5"> <!--Mt put margin top-->
      <div class="col-md-7">
       <table class="table table-bordederes table-hover"> 
            <thead>  <!--Header of the table-->
                <tr>  <!--Row-->
                    <th>NÂ°</th>  <!--Headboard-->
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Acciones</th>
                </tr>
            </thead>
               <tbody>  <!--Body of the table-->
               <% if (data){ %>
                 <% for ( var i = 0; i< data.length; i++) { %>
                    <tr>
                        <td><%= (i + 1) %></td>  <!--cell-->
                        <td><%= data[i].nombre %></td>
                        <td><%= data[i].apellido %></td>
                        <td>
                            <a href="/delete/<%= data[i].id%>" class="btn btn-danger">Borrar</a>
                            <a href="/update/<%= data[i].id%>" class="btn btn-danger">Editar</a>
                        </td>
                    </tr>
                 <%} %>
                 <%} %> 
                     
              </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card" style="width: 35rem;">
     
        <form action="/add" method="post">
            <div class="form-group ">
                <label  class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                  <input type="text" name="nombre" class="form-control" id="nombre" placeholder="nombre">
                </div>
              </div>
              <div class="form-group ">
                <label  class="col-sm-2 col-form-label">Apellido</label>
                <div class="col-sm-10">
                  <input type="text" name="apellido" class="form-control" id="apellido" placeholder="Apellido">
                </div>
              </div>
              <button type="submit"  class="form-group btn btn-primary">Enviar</button>
          </form>

       </div>
     </div>

   </div>

</div>


